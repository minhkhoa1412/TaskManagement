<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_item_board"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="16dp"
    android:paddingEnd="16dp"
    android:paddingStart="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:foreground="?android:attr/selectableItemBackground">

            <ImageView
                android:id="@+id/image_large_board"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/image_test" />

            <View
                android:id="@+id/view_gradient"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gradient_board_1" />
        </FrameLayout>

        <ImageView
            android:id="@+id/image_small_board"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_margin="11dp"
            android:scaleType="centerCrop"
            android:src="@drawable/image_test" />

        <TextView
            android:id="@+id/textview_board"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="11dp"
            android:layout_toRightOf="@+id/image_small_board"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Luan van cuoi ki"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_margin="11dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:src="@drawable/avata_test"
                android:id="@+id/avata_user"
                android:layout_width="25dp"
                android:layout_height="25dp" />
            <TextView
                android:id="@+id/textview_name_user_board"
                android:layout_marginStart="5dp"
                android:textColor="@android:color/white"
                android:ellipsize="end"
                android:textStyle="bold"
                android:textSize="14sp"
                android:maxLines="1"
                android:text="Minh Khoa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>


</LinearLayout>