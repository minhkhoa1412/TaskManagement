<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/relative_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingBottom="16dp"
    android:background="@color/colorBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_marginTop="2dp"
        android:id="@+id/image_avata"
        android:src="@drawable/avata_test"
        android:layout_width="40dp"
        android:layout_height="40dp" />

    <TextView
        android:id="@+id/textview_name_chat"
        android:layout_toRightOf="@id/image_avata"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginLeft="16dp"
        android:text="Thái Minh Khoa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textview_datetime_chat"
        android:layout_below="@+id/textview_name_chat"
        android:layout_toRightOf="@id/image_avata"
        android:textColor="@color/gray"
        android:textSize="15sp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="2dp"
        android:text="9:00 05/07/2018"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_below="@+id/textview_datetime_chat"
        android:layout_toRightOf="@id/image_avata"
        android:textColor="@android:color/white"
        android:textSize="17sp"
        android:layout_marginLeft="16dp"
        android:id="@+id/textview_content_chat"
        android:layout_marginTop="2dp"
        android:text="Ngày mai các bạn họp lớp nhaaa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>