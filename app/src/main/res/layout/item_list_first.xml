<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custom_ripple_border"
    android:paddingEnd="16dp"
    android:paddingStart="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <RelativeLayout
            android:id="@+id/relative_layout_item_list"
            android:layout_width="40dp"
            android:layout_height="match_parent">

            <View
                android:id="@+id/view_first_end"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:background="@drawable/gradient" />

            <RelativeLayout
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerInParent="true">

                <View
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/circle" />

                <View
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/circle"
                    android:backgroundTint="@color/colorBackground" />

                <View
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/circle" />
            </RelativeLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/textview_name_item_list"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/relative_layout_item_list"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Chuẩn bị dự án"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:src="@drawable/ic_keyboard_arrow_right_white_24dp" />

    </RelativeLayout>

</LinearLayout>