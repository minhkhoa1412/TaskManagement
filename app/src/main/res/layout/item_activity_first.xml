<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <android.support.v7.widget.CardView
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image_avata_member"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/avata_test" />

            <TextView
                android:id="@+id/textview_name_member"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/image_avata_member"
                android:text="ThÃ¡i Minh Khoa"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textview_activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textview_name_member"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/image_avata_member"
                android:text="minhkhoa@gmail.com"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <View
                android:id="@+id/view"
                android:layout_marginTop="8dp"
                android:layout_marginStart="10dp"
                android:layout_toRightOf="@+id/image_avata_member"
                android:layout_below="@+id/textview_activity"
                android:background="@drawable/gradient_ancent"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <TextView
                android:layout_marginTop="4dp"
                android:id="@+id/textview_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/image_avata_member"
                android:text="minhkhoa@gmail.com"
                android:textSize="16sp" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>